<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvWrapImvSong"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/imvSongNotification"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@id/imvPrevNoti"
        android:layout_toRightOf="@id/cvWrapImvSong"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameSongNoti"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="Name song" />

        <TextView
            android:id="@+id/tvNameSingerNoti"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="Singer" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imvPrevNoti"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/imvPlayOrPauseNoti"
        android:src="@drawable/ic_pause" />

    <ImageView
        android:id="@+id/imvPlayOrPauseNoti"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/imvNextNoti"
        android:src="@drawable/ic_pause" />



    <ImageView
        android:id="@+id/imvNextNoti"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/imvCloseNoti"
        android:src="@drawable/ic_next" />

    <ImageView
        android:id="@+id/imvCloseNoti"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close" />
</RelativeLayout>